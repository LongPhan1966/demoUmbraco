@inherits Umbraco.Web.Mvc.UmbracoViewPage
@using ContentModels = Umbraco.Web.PublishedModels.Home;
@{
        Layout = "webBaseTemplates.cshtml";
        var home = (Home)Model.Root();
    


    }
<link href="~/css/stylehome.css" rel="stylesheet" />
@* the fun starts here *@

<!------------------------------- BANNER ------------------------------->

<section class="vf-home-banner mt-50">
    <img class="vf-home-banner-img" src="/img/banner-default.jpg" alt="">
</section>


<!------------------------------- TABLE ------------------------------->
<div class="table">
    <div class="container">
        <div class="row col-12 table-col" ">
            <div class="col-md-4">
                <img style="height: auto" src="/img/pay.png" alt=""><br>
                <p class="col-text">@Model.Value("col1Head")</p><br>
                <span class="color-blue">
                    @Model.Value("col1Content")
                </span>
            </div>
            <div class="col-md-4 table-center">
                <img src="/img/sales.png" alt=""><br>
                <p class="col-text color-blue">@Model.Value("col2Head")</p><br>
                <span class="">
                     @Model.Value("col2Content")
                </span>
            </div>
            <div class="col-md-4">
                <img src="/img/car.png" alt=""><br>
                <p class="col-text">@Model.Value("col3Head")</p><br>
                <span class="color-blue">
                     @Model.Value("col3Content")
                </span>
            </div>
        </div>
    </div>
</div>


<!------------------------------- Product ------------------------------->
<div class="back-ground">
    <!------------------------------- NEW Product ------------------------------->
    <div class="new-product">
        <h2 class="new-product-title d-flex justify-content-center">@Model.Value("titleNewProduct")</h2>
        <div class="container">
            <div class="row d-flex">
                <div class="col-md-6 col-12 t-center left-product">
                    <div class="left-product-img">
                        <img width="100%" src="/img/bike-klara-a2.jpg" alt="">
                    </div>
                    <div class="container">
                        <div class="info-bike">
                            <div class="bike-name-price d-flex justify-content-between">
                                <h4 class="bike-name">KLARA A2 - 2021</h4>
                                <span class="bike-price">
                                    26.900.000 vnđ.
                                </span>
                            </div>
                            <p style="font-size: 13px;">@Model.Value("detailNewProduct")</p>
                        </div>

                        <div class="uuDai-bike d-flex justify-content-between">
                            <span class="uuDai-bike-name">@Model.Value("offerNewProduct")</span>
                            <span class="uuDai-bike-price">Chỉ từ 1.259.604 </span>
                        </div>
                        <div class="btn-buy d-flex justify-content-center">
                            <button class="btn btn-primary">
                               @Model.Value("buttonBuy")
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 right-product">
                    <div class="left-product-img">
                        <img width="100%" src="/img/bike-feliz.jpg" alt="">
                    </div>
                    <div class="container">
                        <div class="info-bike">
                            <div class="bike-name-price d-flex justify-content-between">
                                <h4 class="bike-name">FELIZ</h4>
                                <span class="bike-price">
                                    24.900.000 vnđ
                                </span>
                            </div>
                            <p style="font-size: 13px;">@Model.Value("detailNewProduct")</p>
                        </div>

                        <div class="uuDai-bike d-flex justify-content-between">
                            <span class="uuDai-bike-name">@Model.Value("offerNewProduct")</span>
                            <span class="uuDai-bike-price">Chỉ từ 1.165.953 vnđ</span>
                        </div>
                        <div class="btn-buy d-flex justify-content-center">
                            <button class="btn btn-primary">
                                @Model.Value("buttonBuy")
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!--------------------  BEST SALER Slider -------------------------------->  
    <div class="slider container">
        <h2 class="best-seller-title d-flex justify-content-center">@Umbraco.GetDictionaryValue("Example")</h2>
        <div class="container owl-carousel owl-carousel-3  owl-theme">
            <div class="item col-12">
                <img src="/img/felizSLIDER.png" alt="">
                <div class="slider-name-product">
                    <h3>@Model.Value("nameBestProduct")</h3>
                </div>
                <div class="slider-price-product d-flex justify-content-between ">
                    <span>@Model.Value("price")</span>
                    <span style="font-weight :bold ; color: rgb(44,114,198);">14.900.000 VND</span>
                </div>
                <div class="slider-benefit-product d-flex justify-content-between ">
                    <span>@Model.Value("offers")</span>
                    <span style="font-weight :bold">Trả góp lãi xuất 0%</span>
                </div>
                <button class="btn-slider btn btn-primary container">@Model.Value("buttonBuy")</button>
            </div>
            <div class="item col-12">
